@using Bizland.Models
@model IEnumerable<Card>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Cards</h4>
           <a class="btn btn-success" asp-action="Create">Create New Cart</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                               #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Job
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var card in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    <img style="border-radius:0px;width:150px;height:100px;" src="@card.Image"/>
                                </td>
                                <td>
                                   @card.Name
                                </td>
                                <td>
                                   @card.Job
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@card.Id"><i class="mdi mdi-border-color" style="color:white;"></i></a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@card.Id"><i class="mdi mdi-trash-can" style="color:white;"></i></a>
                                </td>

                            </tr>
                            count++;

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

